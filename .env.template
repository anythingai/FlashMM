# FlashMM Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# Application Configuration
# =============================================================================
ENVIRONMENT=development
FLASHMM_DEBUG=true
FLASHMM_LOG_LEVEL=DEBUG
FLASHMM_VERSION=1.0.0

# =============================================================================
# Sei Network Configuration
# =============================================================================
SEI_NETWORK=testnet
SEI_RPC_URL=https://sei-testnet-rpc.polkachu.com
SEI_WS_URL=wss://sei-testnet-rpc.polkachu.com/websocket
SEI_CHAIN_ID=atlantic-2
SEI_PRIVATE_KEY=your_sei_private_key_here

# =============================================================================
# Trading Configuration
# =============================================================================
TRADING_ENABLED=false
TRADING_MAX_POSITION_USDC=2000.0
TRADING_QUOTE_FREQUENCY_HZ=5.0
TRADING_MAX_QUOTE_LEVELS=3
TRADING_SPREAD_BUFFER_BPS=5.0

# =============================================================================
# Cambrian SDK Configuration
# =============================================================================
CAMBRIAN_API_KEY=your_cambrian_api_key_here
CAMBRIAN_SECRET_KEY=your_cambrian_secret_key_here
CAMBRIAN_BASE_URL=https://api.cambrian.com

# =============================================================================
# Storage Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_token_here
INFLUXDB_ORG=flashmm
INFLUXDB_BUCKET=metrics

# =============================================================================
# External APIs
# =============================================================================
GRAFANA_API_KEY=your_grafana_api_key_here
GRAFANA_URL=https://flashmm.grafana.net

TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here

# =============================================================================
# Security Configuration
# =============================================================================
SECRET_KEY=your_jwt_secret_key_here_make_it_long_and_random
ENCRYPTION_KEY=your_encryption_key_here_32_bytes_base64_encoded
API_AUTH_TOKEN=your_admin_api_token_here

# =============================================================================
# ML Model Configuration
# =============================================================================
ML_MODEL_PATH=/app/models/latest.pt
ML_CONFIDENCE_THRESHOLD=0.6
ML_INFERENCE_TIMEOUT_MS=5

# =============================================================================
# Monitoring Configuration
# =============================================================================
HEALTH_CHECK_INTERVAL_SECONDS=30
METRICS_COLLECTION_INTERVAL_SECONDS=10
ALERT_WEBHOOK_URL=your_alert_webhook_url_here

# =============================================================================
# Development Only (Optional)
# =============================================================================
# Set these for local development if needed
# PYTHONPATH=/path/to/flashmm/src
# PYTHONDONTWRITEBYTECODE=1
# FORCE_COLOR=1